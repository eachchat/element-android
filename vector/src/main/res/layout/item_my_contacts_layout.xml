<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/avatar_card_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="@dimen/common_20dip">

        <ImageView
            android:id="@+id/avatar_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:background="@color/green"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_tv"
            style="@style/_16_000000_Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingTop="10dp"
            android:paddingBottom="2dp"
            android:singleLine="true"
            tools:text="名字" />

        <TextView
            android:id="@+id/title_tv"
            style="@style/_14_999999_Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingEnd="@dimen/common_16dip"
            android:paddingBottom="10dp"
            android:singleLine="true"
            tools:text="职位职位职位职位职位职位职位职位职位职位职位职位职位" />

        <View
            android:id="@+id/divider_view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dividerBg"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>