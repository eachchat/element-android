<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/avatar_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        tools:background="@color/green" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/avatar_iv"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/name_tv"
            style="@style/_16_000000_Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            tools:text="名字" />

        <TextView
            android:id="@+id/title_tv"
            style="@style/_14_999999_Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingTop="@dimen/common_2dip"
            android:paddingEnd="@dimen/common_16dip"
            android:singleLine="true"
            tools:text="职位职位职位职位职位职位职位职位职位职位职位职位职位职位职位职位职位" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignStart="@id/ll_content"
        android:layout_alignParentBottom="true"
        android:background="@color/dividerBg"
        android:visibility="gone" />

</RelativeLayout>